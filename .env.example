# Database Configuration
POSTGRES_USER=curator
POSTGRES_PASSWORD=curator_dev_password
POSTGRES_DB=content_curator

# Backend Configuration
SECRET_KEY=your_secret_key_here_change_in_production
ENVIRONMENT=development

# Ollama Configuration
# If running Ollama on your host machine (macOS), use:
OLLAMA_HOST=http://host.docker.internal:11434
# If running Ollama in a separate container, use:
# OLLAMA_HOST=http://ollama:11434

# Topic Ingestion (Tavily)
TAVILY_API_KEY=your_tavily_api_key

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Redis Configuration (optional overrides)
